<!DOCTYPE html>
<html lang="pt-BR">
<head>
<meta charset="utf-8"/>
<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
<title>IBADEJUF</title>

<script src="https://cdn.tailwindcss.com?plugins=forms,typography"></script>
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet"/>
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet"/>

<script>
tailwind.config = {
  darkMode: "class",
  theme: {
    extend: {
      colors: {
        primary: "#5B50E5",
        "primary-dark": "#483FC4",
        "background-light": "#FFFFFF",
        "background-dark": "#18181B",
        "input-border-light": "#E5E7EB",
        "input-border-dark": "#3F3F46",
      },
      fontFamily: {
        sans: ["Poppins", "sans-serif"],
      },
      borderRadius: {
        xl: "1rem",
        "2xl": "1.5rem",
        "3xl": "2rem",
      },
    },
  },
};
</script>

<style>
.curved-bottom {
  border-bottom-left-radius: 50% 18%;
  border-bottom-right-radius: 50% 18%;
}
</style>
</head>

<body class="bg-gray-100 dark:bg-gray-900 flex justify-center items-center min-h-screen font-sans">

<!-- Container principal -->
<div class="
  w-full 
  sm:max-w-md 
  md:max-w-lg 
  lg:max-w-md
  min-h-screen 
  sm:min-h-[820px]
  bg-background-light 
  dark:bg-background-dark 
  shadow-2xl 
  sm:rounded-[40px] 
  overflow-hidden 
  flex 
  flex-col
">

  <!-- Imagem superior -->
  <div class="relative w-full h-[35%] sm:h-[40%] md:h-[42%] shrink-0">
    <div class="absolute inset-0 bg-gradient-to-b from-black/40 to-transparent z-10 curved-bottom"></div>
    <img 
      class="w-full h-full object-cover curved-bottom"
      src="https://lh3.googleusercontent.com/aida-public/AB6AXuBUUhLi5vsqaqLWnA8LAnVuiM7juM46dzpAnMwQJtlzS_WWluu1MpvQ1cxRzv-qm6cY73MiIfcH68xyhtupMV79E5N-jpJc1erENxEitE1-neR2VBAxUZLDB-CgSgZlIjI6AeMCZFXN4yTrg8xam4qgRPq5WiSa4CJ5TgsyRZN3847VbRIRfID5xgFGHkXRdnOne_H4WYSDzFtAkOHqmrfLR4TWdmGuxk8UpTB3cB99EG2yRVMwnHZ5dQAWILlqMkAbDgkLk3KA1fI"
      alt="Educação"
    />
  </div>

  <!-- Conteúdo -->
  <div class="flex-1 px-6 sm:px-8 pt-6 pb-8 flex flex-col">
    
    <!-- Cabeçalho -->
    <div class="mb-6 text-center sm:text-left">
      <h1 class="text-2xl sm:text-3xl font-bold text-primary mb-1">
        Olá Professor!
      </h1>
      <p class="text-gray-500 text-sm">
        Seja Bem-Vindo
      </p>
    </div>

    <!-- Formulário -->
    <form class="space-y-5">
      
      <!-- CPF -->
      <div>
        <label class="block text-sm font-semibold text-primary ml-1">
          CPF
        </label>
        <div class="relative">
          <input
            type="text"
            placeholder="000.000.000-00"
            class="w-full px-4 py-3.5 rounded-xl border border-input-border-light bg-white focus:outline-none focus:ring-2 focus:ring-primary"
          />
          <span class="absolute right-4 top-3.5 text-gray-400 material-icons">
            badge
          </span>
        </div>
      </div>

      <!-- Senha -->
      <div>
        <label class="block text-sm font-semibold text-primary ml-1">
          Senha
        </label>
        <div class="relative">
          <input
            type="password"
            placeholder="Digite sua senha"
            class="w-full px-4 py-3.5 rounded-xl border border-input-border-light bg-white focus:outline-none focus:ring-2 focus:ring-primary"
          />
          <span class="absolute right-4 top-3.5 text-gray-400 material-icons cursor-pointer">
            visibility_off
          </span>
        </div>
      </div>

      <!-- Botão -->
      <button
        class="w-full bg-primary hover:bg-primary-dark text-white font-bold py-3.5 rounded-xl shadow-lg transition-all active:scale-95"
      >
        Acessar
      </button>

      <!-- Esqueceu -->
      <div class="text-center pt-2">
        <a href="#" class="text-sm text-gray-500 hover:text-primary">
          Esqueceu sua senha?
        </a>
      </div>

    </form>
  </div>
</div>

</body>
</html>
