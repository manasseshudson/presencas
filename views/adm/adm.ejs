<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Cadastro de Professor</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 flex justify-center items-center min-h-screen">
  <div class="bg-white shadow-md rounded-2xl p-8 w-full max-w-lg">
    <div class="flex justify-between items-center mb-6">
      <h2 class="text-2xl font-bold text-gray-800">Cadastro de Professor</h2>
      <a href="/" class="bg-red-500 hover:bg-red-600 text-white font-semibold px-4 py-2 rounded-lg transition">Voltar</a>
    </div>

    <form id="formProfessor" class="space-y-5">
      <div>
        <label for="nome" class="block text-gray-700 font-medium mb-2">Nome</label>
        <input
          type="text"
          id="nome"
          name="nome"
          placeholder="Digite o nome do professor"
          required
          class="w-full border border-gray-300 rounded-xl px-4 py-2 focus:ring-2 focus:ring-emerald-500 focus:outline-none"
        >
      </div>
	  <div>
        <label for="nome" class="block text-gray-700 font-medium mb-2">Matéria</label>
        <input
          type="text"
          id="materia"
          name="materia"
          placeholder="Digite o nome da Materia"
          required
          class="w-full border border-gray-300 rounded-xl px-4 py-2 focus:ring-2 focus:ring-emerald-500 focus:outline-none"
        >
      </div>

      <div>
        <label for="email" class="block text-gray-700 font-medium mb-2">E-mail</label>
        <input
          type="email"
          id="email"
          name="email"
          placeholder="Digite o e-mail do professor"
          required
          class="w-full border border-gray-300 rounded-xl px-4 py-2 focus:ring-2 focus:ring-emerald-500 focus:outline-none"
        >
      </div>
	  <div>
        <label for="nome" class="block text-gray-700 font-medium mb-2">Senha</label>
        <input
          type="text"
          id="senha"
          name="senha"
          placeholder="Digite uma Senha"
          required
          class="w-full border border-gray-300 rounded-xl px-4 py-2 focus:ring-2 focus:ring-emerald-500 focus:outline-none"
        >
      </div>

      <div class="flex justify-end">
        <button
          type="submit"
          class="bg-emerald-500 hover:bg-emerald-600 text-white font-semibold px-6 py-2 rounded-xl transition"
        >
          Cadastrar
        </button>
      </div>
    </form>
  </div>

  <script>
    document.getElementById("formProfessor").addEventListener("submit", function(e) {
      e.preventDefault();

      const nome = document.getElementById("nome").value.trim();
      const email = document.getElementById("email").value.trim();

      if (!nome || !email) {
        alert("Preencha todos os campos!");
        return;
      }

      // Simulação de envio (poderia ser um fetch para o servidor)
      alert(`Professor cadastrado com sucesso!\n\nNome: ${nome}\nE-mail: ${email}`);

      // Limpa o formulário
      this.reset();
    });
  </script>
</body>
</html>
