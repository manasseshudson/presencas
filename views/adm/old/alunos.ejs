<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Lista de Presença</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://unpkg.com/lucide@latest"></script>
</head>
<body class="bg-gray-100 min-h-screen flex items-center justify-center p-2">
  <div class="bg-white shadow-lg rounded-2xl w-full max-w-md p-5">

    <!-- Cabeçalho -->
    <div class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between mb-4">
      <!-- Linha 1: Título e botões -->
      <div class="flex items-center justify-between w-full">
        <h1 class="text-lg sm:text-xl font-bold text-gray-800">
          Lista de Presença
        </h1>
        <div class="flex items-center gap-2">
          <button class="flex items-center gap-2 border border-pink-400 text-pink-500 px-3 py-1.5 rounded-full text-sm hover:bg-pink-50 transition" onclick="voltarMaterias()">
            <span class="material-icons text-sm">menu</span> Matérias
          </button>
          <button class="flex items-center gap-2 bg-pink-500 text-white px-3 py-1.5 rounded-full text-sm shadow hover:bg-pink-600 transition" onclick="sair()">
            <span class="material-icons text-sm">arrow_forward</span> Sair
          </button>
        </div>
      </div>

      <!-- Linha 2: Informações da matéria -->
      <div class="flex flex-col gap-1 mt-1">
        <span class="flex items-center gap-2 bg-emerald-100 text-emerald-700 font-semibold px-3 py-1 rounded-full text-sm w-fit">
          <span class="w-2 h-2 bg-emerald-500 rounded-full"></span>
          Matéria - <%= materia %>
        </span>

        <span class="flex items-center gap-1 text-sm text-green-700 ml-1">
          <span class="w-2 h-2 bg-green-600 rounded-full"></span>
          Presente: <%= Presente %>
        </span>
      </div>
    </div>

    <!-- Campo de pesquisa -->
    <input
      type="text"
	  id="pesquisa"
      placeholder="Pesquisar aluno..."
      class="w-full border border-gray-200 rounded-xl px-4 py-2 focus:ring-2 focus:ring-emerald-500 focus:outline-none mb-4"
    >

    <!-- Lista de alunos -->
    <div class="space-y-3" id="lista">
		 <% alunos.forEach(dados => { %>
			<div class=" aluno-item flex items-center justify-between border rounded-xl p-3 shadow-sm">
				<span class="font-semibold text-gray-800 nome-aluno"><%= dados.nome %></span>
				<button class="bg-red-500 hover:bg-red-600 text-white p-2 rounded-full shadow-sm">
				  <a href="/adm/remPresenca/<%= dados.id_aluno %>/<%= id_materia %>/<%= modulo %>"><i data-lucide="trash-2" class="w-4 h-4"></i></a>
				</button>
			  </div>
			<!--
			<div class="aluno-item border border-gray-200 rounded-xl p-3 ">
				<p class="font-semibold text-gray-800 nome-aluno"><%= dados.nome %></p>
				<button class="mt-2 w-full bg-red-500 hover:bg-red-600 text-white py-2 rounded-full flex items-center justify-center gap-2 transition">
					<span class="material-icons text-sm">check</span> Remover Presença
				</button>
			  </div>
			  -->
		<% }) %>


    </div>
  </div>

  <!-- Ícones -->
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <script>
	lucide.createIcons();
    const pesquisa = document.getElementById("pesquisa");

    function marcarPresenca(id_aluno) {
      const postData = {
        id_aluno,
        id_materia: <%= id_materia %>,
		id_modulo: <%= modulo %>,
        data: dataAtualFormatada(),
        hora: horaAtual()
      };

      fetch('/marcarPresenca', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(postData)
      })
      .then(response => {
        if (!response.ok) throw new Error(`Erro HTTP! status: ${response.status}`);
        return response.json();
      })
      .then(() => {
        setTimeout(() => {
          window.location.href = `/alunos/<%= id_materia %>/<%= modulo %>`;
        }, 100);
      })
      .catch(error => console.error('Erro:', error));
    }

    // Formatações de data e hora
    function horaAtual() {
      const data = new Date();
      const h = String(data.getHours()).padStart(2, "0");
      const m = String(data.getMinutes()).padStart(2, "0");
      const s = String(data.getSeconds()).padStart(2, "0");
      return `${h}:${m}:${s}`;
    }

    function dataAtualFormatada() {
      const data = new Date();
      const dia = String(data.getDate()).padStart(2, "0");
      const mes = String(data.getMonth() + 1).padStart(2, "0");
      const ano = data.getFullYear();
      return `${dia}/${mes}/${ano}`;
    }

    // Pesquisa em tempo real
    pesquisa.addEventListener("input", () => {
      const termo = pesquisa.value.toLowerCase();
      const alunos = document.querySelectorAll(".aluno-item");

      alunos.forEach(item => {
        const nome = item.querySelector(".nome-aluno").textContent.toLowerCase();
        item.style.display = nome.includes(termo) ? "flex" : "none";
      });
    });
	
	
	function voltarMaterias(){
		 window.location.href = `/adm/materias/<%= modulo %>`;
	}
	function sair(){
		 window.location.href = `/`;
	}
	
  </script>

</body>
</html>
