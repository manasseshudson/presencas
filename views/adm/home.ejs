<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>Sales Monitoring Dashboard</title>
    <script src="https://cdn.tailwindcss.com?plugins=forms,typography"></script>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&amp;display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
      tailwind.config = {
        darkMode: "class",
        theme: {
          extend: {
            colors: {
              primary: "#3b82f6", // Blue-500
              "background-light": "#f3f4f6", // Gray-100
              "background-dark": "#111827", // Gray-900
              "card-light": "#ffffff",
              "card-dark": "#1f2937", // Gray-800
              "sidebar-light": "#ffffff",
              "sidebar-dark": "#1f2937",
              "text-primary-light": "#1f2937",
              "text-primary-dark": "#f9fafb",
              "text-secondary-light": "#6b7280",
              "text-secondary-dark": "#9ca3af",
              "accent-blue": "#3b82f6",
              "accent-red": "#ef4444",
              "accent-green": "#10b981",
              "accent-orange": "#f97316",
            },
            fontFamily: {
              display: ["Roboto", "sans-serif"],
            },
            borderRadius: {
              DEFAULT: "0.5rem",
            },
          },
        },
      };
    </script>
    <style>
      .no-scrollbar::-webkit-scrollbar {
        display: none;
      }

      .no-scrollbar {
        -ms-overflow-style: none;
        scrollbar-width: none;
      }
    </style>
  </head>
  <body class="bg-background-light dark:bg-background-dark font-display text-text-primary-light dark:text-text-primary-dark transition-colors duration-200">
    <div class="flex h-screen overflow-hidden">
      <aside class="w-64 flex-shrink-0 bg-sidebar-light dark:bg-sidebar-dark border-r border-gray-200 dark:border-gray-700 hidden lg:flex flex-col h-full transition-colors duration-200">
        <div class="h-16 flex items-center px-6 border-b border-gray-200 dark:border-gray-700">
          <div class="flex items-center gap-2">
            <div class="w-8 h-8 bg-primary rounded-lg flex items-center justify-center transform rotate-45">
              <span class="text-white font-bold text-lg transform -rotate-45">V</span>
            </div>
            <span class="text-xl font-bold tracking-tight text-gray-800 dark:text-white">IBADEJUF</span>
          </div>
        </div>
        <div class="flex-1 overflow-y-auto no-scrollbar py-4 px-4 space-y-1">
          <p class="px-2 text-xs font-semibold text-gray-400 uppercase tracking-wider mb-2 mt-2">Main</p>
          <a class="flex items-center gap-3 px-3 py-2 text-sm font-medium rounded-md bg-primary text-white" href="#">
            <span class="material-icons text-lg">dashboard</span> Principal <span class="ml-auto bg-green-500 text-white py-0.5 px-2 rounded-full text-xs">1</span>
          </a>
          <p class="px-2 text-xs font-semibold text-gray-400 uppercase tracking-wider mb-2 mt-6">General</p>
          <a class="flex items-center gap-3 px-3 py-2 text-sm font-medium rounded-md text-gray-600 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700" href="#">
            <span class="material-icons text-lg">sentiment_satisfied</span> Icons </a>
          <a class="flex items-center gap-3 px-3 py-2 text-sm font-medium rounded-md text-gray-600 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700" href="#">
            <span class="material-icons text-lg">bar_chart</span> Charts 
          </a>
          
        </div>
      </aside>
      <div class="flex-1 flex flex-col h-screen overflow-hidden relative">
        <header class="h-16 bg-card-light dark:bg-card-dark border-b border-gray-200 dark:border-gray-700 flex items-center justify-between px-6 z-10 transition-colors duration-200">
          <div class="flex items-center gap-4 w-1/3">
            <button class="lg:hidden p-2 text-gray-500 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-md">
              <span class="material-icons">menu</span>
            </button>
            <button class="p-2 text-gray-500 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-full hidden lg:block">
              <span class="material-icons">menu_open</span>
            </button>
          </div>
        </header>
        <main class="flex-1 overflow-y-auto bg-background-light dark:bg-background-dark p-6 transition-colors duration-200">
          
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
		  
			<div class="bg-accent-green rounded-xl p-5 text-white relative overflow-hidden shadow-lg">
              <div class="relative z-10">
                <p class="text-xs font-semibold uppercase opacity-80 mb-2">Total de Alunos</p>
                <div class="flex justify-between items-end">
                  <div>
                    <h3 class="text-2xl font-bold">$7,125.70</h3>
                    
                  </div>
                  
                </div>
              </div>
              <div class="absolute bottom-0 left-0 right-0 h-10 opacity-30">
                <svg class="w-full h-full text-white fill-current" preserveAspectRatio="none" viewBox="0 0 100 25">
                  <path d="M0,25 L0,18 L10,12 L25,20 L40,10 L55,18 L70,8 L85,15 L100,5 L100,25 Z"></path>
                </svg>
              </div>
            </div>
		  
		  
            <div class="bg-primary rounded-xl p-5 text-white relative overflow-hidden shadow-lg">
              <div class="relative z-10">
                <p class="text-xs font-semibold uppercase opacity-80 mb-2">Alunos Presentes</p>
                <div class="flex justify-between items-end">
                  <div>
                    <h3 class="text-2xl font-bold">$5,74.12</h3>
                  </div>
                  
                </div>
              </div>
              <div class="absolute bottom-0 left-0 right-0 h-10 opacity-30">
                <svg class="w-full h-full text-white fill-current" preserveAspectRatio="none" viewBox="0 0 100 25">
                  <path d="M0,25 L0,15 L10,20 L20,10 L30,18 L40,12 L50,22 L60,8 L70,16 L80,10 L90,20 L100,5 L100,25 Z"></path>
                </svg>
              </div>
            </div>
			
			
            <div class="bg-accent-red rounded-xl p-5 text-white relative overflow-hidden shadow-lg">
              <div class="relative z-10">
                <p class="text-xs font-semibold uppercase opacity-80 mb-2">Alunos Faltantes</p>
                <div class="flex justify-between items-end">
                  <div>
                    <h3 class="text-2xl font-bold">$1,230.17</h3>
                  </div>
                  
                </div>
              </div>
              <div class="absolute bottom-0 left-0 right-0 h-10 opacity-30">
                <svg class="w-full h-full text-white fill-current" preserveAspectRatio="none" viewBox="0 0 100 25">
                  <path d="M0,25 L0,10 L15,18 L30,5 L45,15 L60,8 L75,20 L90,12 L100,25 Z"></path>
                </svg>
              </div>
            </div>
			
            
			
          </div>
          <div class="grid grid-cols-1 xl:grid-cols-1 gap-6 mb-8">
            <div class="lg:col-span-2 bg-card-light dark:bg-card-dark rounded-xl shadow-sm border border-gray-100 dark:border-gray-700 p-6">
              <div class="flex justify-between items-start mb-6">
                <div>
                  <h3 class="font-bold text-lg text-gray-800 dark:text-white uppercase">Alunos Presentes Hoje.</h3>
                </div>
                
              </div>
              <div class="overflow-x-auto">
                <table class="w-full text-left border-collapse">
                  <thead>
                    <tr>
                      <th class="p-3 text-xs font-semibold tracking-wide text-gray-500 dark:text-gray-400 uppercase border-b border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-800">Aluno</th>
                      <th class="p-3 text-xs font-semibold tracking-wide text-gray-500 dark:text-gray-400 uppercase border-b border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-800">Matéria</th>
                      <th class="p-3 text-xs font-semibold tracking-wide text-gray-500 dark:text-gray-400 uppercase border-b border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-800">Módulo</th>
                      <th class="p-3 text-xs font-semibold tracking-wide text-gray-500 dark:text-gray-400 uppercase border-b border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-800">Professor (a)</th>
					  <th class="p-3 text-xs font-semibold tracking-wide text-gray-500 dark:text-gray-400 uppercase border-b border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-800">Revogar</th>
                    </tr>
                  </thead>
                  <tbody class="divide-y divide-gray-100 dark:divide-gray-700">
					<% alunosPresentes.forEach(dados => { %>
                    <tr class="hover:bg-gray-50 dark:hover:bg-gray-800 transition-colors">
                      <td class="p-3 text-sm text-gray-700 dark:text-gray-300"><%= dados.nome %></td>
                      <td class="p-3 text-sm text-gray-700 dark:text-gray-300 font-bold"><%= dados.materia %></td>
                      <td class="p-3 text-sm text-gray-700 dark:text-gray-300 font-bold"><%= dados.modulo %></td>
                      <td class="p-3 text-sm text-gray-700 dark:text-gray-300"><%= dados.professor %></td>
					  <td class="p-3 text-sm text-gray-700 dark:text-gray-300">Revogar</td>
                    </tr>
					<% }) %>
                  
                  </tbody>
                </table>
              </div>
            </div>
          </div>
          
          
        </main>
      </div>
    </div>
  </body>
</html>